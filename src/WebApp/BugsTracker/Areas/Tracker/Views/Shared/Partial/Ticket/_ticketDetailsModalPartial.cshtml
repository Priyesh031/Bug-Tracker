<div class="modal right fade" id="showTicketDetails" tabindex="-1" role="dialog" aria-labelledby="showTicketDetailsModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header d-flex flex-column pl-0 pb-0">
                <div class="w-100 d-flex align-items-center pl-2 pb-2">
                    <h5 class="modal-title" id="ticket-details-modal-label">Ticket details</h5>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <ul class="nav nav-tabs">
   
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Comments</a>
                    </li>
                </ul>
            </div>
            <div class="modal-body">

                <div class="w-100 h-100" id="comments">
                    <div class="bg-light" id="comments-holder">
                        @{
                            for (int i = 0; i < 9; i++)
                            {
                                <div class="comment p-2 w-100">
                                    <p class="title">John Doe <span>12/01/2021 4:02 pm</span> <span class="float-right pr-2"><i class="far fa-comments"></i></span></p>
                                    <p>Would need your attention on that.</p>
                                </div>
                            }
                        }
                    </div>
                    <div class="bg-white p-3 comment-writter-holder">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Type Comment" aria-label="Type Comment" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
