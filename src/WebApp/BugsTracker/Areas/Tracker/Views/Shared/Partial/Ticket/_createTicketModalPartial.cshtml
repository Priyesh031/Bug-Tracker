@model BugTracker.Application.Dto.Tickets.CreateTicketDto

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Ticket</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>

    </div>
    <form asp-controller="Ticket" asp-action="create" >

        <div class="modal-body d-flex">
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Command.Name" class="col-form-label">Name:</label>
                    <input asp-for="Command.Name" class="form-control" id="recipient-name">
                    <span asp-validation-for="Command.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Command.Description" class="col-form-label">Description:</label>
                    <textarea asp-for="Command.Description" class="form-control" id="message-text" rows="3"></textarea>
                    <span asp-validation-for="Command.Description" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Command.Priority" class="col-form-label">Priority:</label>
                        <select asp-for="Command.Priority" class="form-control" id="recipient-name">
                            <option>Immediate</option>
                            <option>High</option>
                            <option>Medium</option>
                            <option>Low</option>
                        </select>
                        <span asp-validation-for="Command.Priority" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <label asp-for="Command.Type" class="col-form-label">Type:</label>
                        <select asp-for="Command.Type" class="form-control" id="recipient-name">
                            <option>Issue</option>
                            <option>Bug Fix</option>
                            <option>Feature</option>
                        </select>
                        <span asp-validation-for="Command.Type" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <label asp-for="Command.Status" for="Name" class="col-form-label">Status</label>
                        <select asp-for="Command.Status" class="form-control" id="recipient-name">
                            <option>Opened</option>
                        </select>
                        <span asp-validation-for="Command.Status" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Command.EstimatedHours" class="col-form-label">Estimated hours</label>
                    <input asp-for="Command.EstimatedHours" class="form-control" id="estimated-hours">
                    <span asp-validation-for="Command.EstimatedHours" class="text-danger"></span>
                </div>

            </div>

            <div class="col-6">

                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="Command.Team" class="col-form-label">Assigned Project manager</label>
                        <select asp-for="Command.Team" class="form-control" id="recipient-name" multiple>
                            @foreach (var sub in Model.Team.Where(tm => tm.Role.ToLower() == "project manager"))
                            {
                                <option value="@sub.Id">@sub.Username - @sub.Role </option>
                            }
                        </select>
                        <span asp-validation-for="Command.Team" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label class="col-form-label">Assigned Dev</label>
                        <select asp-for="Command.Team" class="form-control" id="recipient-name" multiple>
                            @foreach (var sub in Model.Team.Where(tm => tm.Role.ToLower() == "developer"))
                            {
                                <option value="@sub.Id">@sub.Username - @sub.Role </option>
                            }
                        </select>
                        <span asp-validation-for="Command.Team" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label class="col-form-label">Assigned submitter</label>
                        <select asp-for="Command.Team" class="form-control" id="recipient-name" multiple>
                            @foreach (var sub in Model.Team.Where(tm => tm.Role.ToLower() == "submitter"))
                            {
                                <option value="@sub.Id">@sub.Username - @sub.Role </option>
                            }
                        </select>
                        <span asp-validation-for="Command.Team" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-outline-success"/>
        </div>
    </form>


</div>
