<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/tracker.css" />
</head>
<body>
    <div class="wrapper">
        <div class="body-overlay"></div>
        <!--------Sidebar-------->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <i class="fab fa-hornbill"></i>
                <h3>Bug Tracker</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="" class="dashboard">
                        <i class="fas fa-chart-bar"></i><span>Dashboard</span>
                    </a>
                </li>

                <li>
                    <div class="small-screen navbar-display">
                        <ul>
                            <li class="dropdown d-lg-none d-md-block d-sm-block">
                                <a href="#homeSubMenu0" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"></a>
                                <ul class="collapse list-unstyled menu" id="homeSubMenu0">
                                    <li> <a href="#">You have 5 new messages</a></li>
                                </ul>
                            </li>

                            <li class="dropdown d-lg-none d-md-block d-sm-block">
                                <a href="#"><i class="material-icons">apps</i><span>apps</span> </a>
                            </li>
                            <li class="dropdown d-lg-none d-md-block d-sm-block">
                                <a href="#"><i class="material-icons">person</i><span>person</span> </a>
                            </li>
                            <li class="dropdown d-lg-none d-md-block d-sm-block">
                                <a href="#"><i class="material-icons">settings</i><span>settings</span> </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <li>
                    <a href="" data-toggle="collapse">
                        <i class="fas fa-user"></i><span>Projects user</span>
                    </a>
                </li>

                <li>
                    <a href="" data-toggle="collapse">
                        <i class="fas fa-user-tag"></i><span>Role Assignement</span>
                    </a>
                </li>
                <li>
                    <a href="" data-toggle="collapse">
                        <i class="fas fa-project-diagram"></i><span>Projects</span>
                    </a>
                </li>
                <li>
                    <a href="" data-toggle="collapse">
                        <i class="fas fa-ticket-alt"></i><span>Tickets</span>
                    </a>
                </li>
            </ul>


        </nav>


        <!-- Page content -->

        <div id="content">
            <!-- Top navbar -->
            <div class="top-navbar">
                <nav class="navbar navbar-expand-lg">
                    <div class="d-flex">
                        <button type="button" id="sidebar-collapse" class="d-xl-block d-lg-block d-md-none d-none">
                            <span><i class="fas fa-caret-square-left"></i></span>
                        </button>

                        <a class="navbar-brand" href="#">Dashboard</a>
                    </div>
                    <button class="d-inline-block d-lg-none ml-auto more-button" type="button" data-toggle="collapse"
                            data-target="#navbarcollapse" aria-controls="navbarcollapse" aria-expanded="false" aria-label="Toggle">
                        <span><i class="fas fa-ellipsis-v"></i></span>
                    </button>
                </nav>
            </div>

            <!-------------- Main content --------------->

            <div class="main-content">

                <!--First row -->
                <div class="row p-3">
                    <div class="first-row">
                        <div class="first-row-header row d-flex px-3 py-2 w-100 justify-content-between">
                            <div class="title"> Projects </div>
                            <div class="project-add-holder"><a href="#" class="add-project-btn"> New Project</a></div>
                        </div>

                        <div class="row w-100">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="project-thead">
                                        <tr>
                                            <th scope="col" class="text-muted">Project</th>
                                            <th scope="col" class="text-muted">Description</th>
                                            <th scope="col" class="text-muted">Contributor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row"><a href="#">Bug tracker</a></th>
                                            <td>Mark</td>
                                            <td>Otto</td>
                                        </tr>
                                        <tr>
                                            <th scope="row"><a href="#">Portfolio Management</a></th>
                                            <td>Jacob</td>
                                            <td>Thornton</td>
                                        </tr>
                                        <tr>
                                            <th scope="row"><a href="#">Portfolio</a></th>
                                            <td>Larry</td>
                                            <td>the Bird</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                        <div class="row d-flex justify-content-start align-items-start w-100" >
                            <div class="pagination-holder d-flex p-2">
                                <div class="purple-circle"><i class="fas fa-angle-left"></i></div>
                                <div class="purple-circle filled">1</div>
                                <div class="purple-circle"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Second row -->
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                Tickets by Status
                            </div>
                            <div class="card-body">
                                <canvas class="pie-chart" id="ticket-status-pie"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                Tickets by Priority
                            </div>
                            <div class="card-body">
                                <canvas class="pie-chart" id="ticket-priority-pie"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                Tickets by Type
                            </div>
                            <div class="card-body">
                                <canvas class="pie-chart" id="ticket-type-pie"></canvas>
                            </div>
                        </div>
                    </div>

                </div>
          
            </div>

        </div>
    </div>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/Chart.js/chart.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebar-collapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });

            $('.more-button,.body-overlay').on('click', function () {
                console.log("clicked")
                $('#sidebar,.body-overlay').toggleClass('show-nav');
            });

            
            var ticketTypePie = new Chart($("#ticket-type-pie"), {
                type: 'doughnut',

                data: {
                    labels: ["Issue", "Bug", "Feature request"],
                    datasets: [{
                        label: 'My First Dataset',
                        data: [300, 50, 100],
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 205, 86)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                usePointStyle: true,
                                boxWidth: 6
                            }
                        }
                    }
                }
            });

            var ticketStatusPie = new Chart($("#ticket-status-pie"), {
                type: 'doughnut',

                data: {
                    labels: ["Resolved", "New", "In Progress"],
                    datasets: [{
                        label: 'My First Dataset',
                        data: [300, 50, 100],
                        backgroundColor: [
                            'rgb(255, 205, 86)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 99, 132)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                usePointStyle: true,
                                boxWidth: 6
                            }
                        }
                    }
                }
            });

            var ticketPriorityPie = new Chart($("#ticket-priority-pie"), {
                type: 'doughnut',

                data: {
                    labels: ["Immediate", "High", "Medium","Low"],
                    datasets: [{
                        label: 'My First Dataset',
                        data: [300, 50, 100,60],
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 205, 86)',
                            'rgb(100, 205, 186)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                usePointStyle: true,
                                boxWidth: 6
                            }
                        }
                    }
                }
            });

        });

    </script>
</body>
</html>